    <script>
        window.addEventListener('scroll', () => {
            const btn = document.getElementById('floatBtn');
            if (window.scrollY > 500) btn.classList.add('show'); else btn.classList.remove('show');
        });

        // フォーム内の広告を消すための監視スクリプト
        const observer = new MutationObserver(() => {
            const adLinks = document.querySelectorAll('.form-embed-outer a[href*="form.run"]');
            adLinks.forEach(link => link.style.display = 'none');
        });
        observer.observe(document.querySelector('.form-embed-outer'), { childList: true, subtree: true });
    </script>
